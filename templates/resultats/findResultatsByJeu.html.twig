{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<h2>Les résultats</h2>	
		<h3>{{ jeu.nom }}</h3>
        	<table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">Score</th>
                  <th scope="col">Mode</th>
                  <th scope="col">Joueur</th>
                  <th scope="col">Avatar</th>
              </thead>
               {% for resultat in jeu.resultats %}
               	<tbody>
    				<tr class="table-active">
                        <td>{{ resultat.score }}</td>
                        <td>{{ resultat.mode }}</td>
                        <td>{{ resultat.joueur }}</td>
                        <td>{{ resultat.avatar }}</td>
          			</tr>
    			</tbody>
              {% endfor %}
			</table> 
        	<p>
        		<a href="{{ path('create_jeu_resultats', {'id':jeu.id}) }}" class="btn btn-success" role="button">
        			<span class="glyphicon glyphicon-plus"></span> Ajouter un résultat
        		</a>
        	</p> 
</div>
{% endblock %}